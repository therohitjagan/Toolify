<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#FFFFFF"/> <!-- Change to your desired background color -->

    <!-- Corner Radius -->
    <corners android:radius="16dp"/> <!-- Adjust for rounded corners -->

    <!-- Stroke (Border) -->
    <stroke
        android:width="2dp"
        android:color="#DDDDDD"/> <!-- Light gray border, adjust as needed -->

    <!-- Padding (Optional) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
