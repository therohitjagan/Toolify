<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Vertical gradient from a light gray to white -->
    <gradient
        android:startColor="#F8F9FA"
        android:endColor="#FFFFFF"
        android:angle="90" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Light border for a subtle outline -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Padding to ensure content doesn't touch the edges -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
