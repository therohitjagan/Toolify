<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Generator"
        android:textSize="26sp"
        android:textColor="@color/primary_dark"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium" />

    <!-- Password Length Input -->
    <EditText
        android:id="@+id/passwordLengthEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter password length"
        android:inputType="number"
        android:padding="16dp"
        android:textColor="#6200EE"
        android:backgroundTint="#6200EE"
        android:textSize="16sp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp" />

    <!-- Include Symbols Checkbox -->
    <CheckBox
        android:id="@+id/includeSymbolsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include Symbols"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Generated Password Display -->
    <EditText
        android:id="@+id/generatedPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Generated Password"
        android:editable="false"
        android:padding="16dp"
        android:textColor="#000000"
        android:backgroundTint="#D1C4E9"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Generate Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/generateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Password"
        android:textColor="#ffffff"
        android:backgroundTint="@color/primary"
        android:padding="12dp"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Password Strength Indicator -->
    <TextView
        android:id="@+id/strengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strength: Weak"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center" />

    <!-- Copy to Clipboard Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/copyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy Password"
        android:textColor="#ffffff"
        android:backgroundTint="#FF5722"
        android:padding="12dp"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        android:layout_marginBottom="32dp" />


</LinearLayout>
